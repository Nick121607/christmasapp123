<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Santa Flappy Bird</title>
    <style>
        body {
            margin: 0;
            background-color: #87CEEB;
            overflow: hidden;
            font-family: Arial, sans-serif;
        }
        canvas {
            display: block;
        }
    </style>
</head>
<body>
    <canvas id="gameCanvas"></canvas>
    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        let santa = {
            x: 50,
            y: canvas.height / 2,
            width: 40,
            height: 40,
            velocity: 0,
            gravity: 0.6,
            jump: -10,
            draw() {
                ctx.fillStyle = 'red';
                ctx.fillRect(this.x, this.y, this.width, this.height);
                ctx.fillStyle = 'white';
                ctx.fillRect(this.x, this.y, this.width, 10); // Santa's hat
            },
            update() {
                this.velocity += this.gravity;
                this.y += this.velocity;
                if (this.y < 0) this.y = 0;
                if (this.y + this.height > canvas.height) {
                    this.y = canvas.height - this.height;
                    gameOver();
                }
            }
        };

        let pipes = [];
        let frame = 0;
        let score = 0;
        let isGameOver = false;

        function createPipe() {
            let gap = 150;
            let pipeHeight = Math.random() * (canvas.height - gap - 50) + 50;
            pipes.push({
                x: canvas.width,
                width: 50,
                topHeight: pipeHeight,
                bottomHeight: canvas.height - pipeHeight - gap
            });
        }

        function updatePipes() {
            for (let pipe of pipes) {
                pipe.x -= 3;
                if (pipe.x + pipe.width < 0) {
                    pipes.shift();
                    score++;
                }
            }

            if (frame % 150 === 0) {
                createPipe();
            }
        }

        function drawPipes() {
            for (let pipe of pipes) {
                ctx.fillStyle = 'green';
                ctx.fillRect(pipe.x, 0, pipe.width, pipe.topHeight);
                ctx.fillRect(pipe.x, canvas.height - pipe.bottomHeight, pipe.width, pipe.bottomHeight);
            }
        }

        function detectCollision() {
            for (let pipe of pipes) {
                if (
                    santa.x < pipe.x + pipe.width &&
                    santa.x + santa.width > pipe.x &&
                    (santa.y < pipe.topHeight || santa.y + santa.height > canvas.height - pipe.bottomHeight)
                ) {
                    gameOver();
                }
            }
        }

        function gameOver() {
            isGameOver = true;
            ctx.font = '48px Arial';
            ctx.fillStyle = 'black';
            ctx.fillText('Game Over!', canvas.width / 2 - 100, canvas.height / 2);
            ctx.fillText(`Score: ${score}`, canvas.width / 2 - 100, canvas.height / 2 + 50);
        }

        function drawScore() {
            ctx.font = '24px Arial';
            ctx.fillStyle = 'black';
            ctx.fillText(`Score: ${score}`, 10, 30);
        }

        function gameLoop() {
            if (isGameOver) return;

            ctx.clearRect(0, 0, canvas.width, canvas.height);

            santa.update();
            santa.draw();

            updatePipes();
            drawPipes();

            detectCollision();
            drawScore();

            frame++;
            requestAnimationFrame(gameLoop);
        }

        window.addEventListener('keydown', (e) => {
            if (e.code === 'Space') {
                santa.velocity = santa.jump;
            }
        });

        createPipe();
        gameLoop();
    </script>
</body>
</html>
